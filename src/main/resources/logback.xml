<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-10.10thread] %-5level %-15logger{36} - %-15marker %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="Sync" level="INFO"/>
    <logger name="Navigate" level="WARN"/>
    <logger name="Seminar" level="WARN"/>
    <logger name="Download" level="WARN"/>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
